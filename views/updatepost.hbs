<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Update Blog Entry</title>
    <style media="screen">
    body{
      padding:0;
      margin:0;
      width:100%;
      text-align: center;
      background:linear-gradient(to right, #0cebeb,#20e3b2,#29ffc6);
    }
    #home-btn{
      width:200px;
      height:50px;
      cursor: pointer;
      font-size: 1em;
      background:white;
      margin:0 1%;
      border:1px solid #d1d1d1;
      box-shadow: 3px 3px 3px 3px #d1d1d1;
      text-transform: uppercase;
      letter-spacing: 1px;
    }
    #home-btn:hover{
      background: plum;
      border:none;
      box-shadow: 3px 3px 3px 3px #b080b0;
      color:white;
    }
    #home-btn:active{
      outline:none;
      box-shadow: none;
    }
    #create-btn{
      width:200px;
      height:50px;
      cursor: pointer;
      font-size: 1em;
      background:white;
      margin:0 1%;
      border:1px solid #d1d1d1;
      box-shadow: 3px 3px 3px 3px #d1d1d1;
      text-transform: uppercase;
      letter-spacing: 1px;
    }
    #create-btn:hover{
      background: plum;
      border:none;
      box-shadow: 3px 3px 3px 3px #b080b0;
      color:white;
    }
    #create-btn:active{
      outline:none;
      box-shadow: none;
    }
    #logout-btn{
      width:200px;
      height:50px;
      cursor: pointer;
      font-size: 1em;
      background:white;
      margin:0 1%;
      border:1px solid #d1d1d1;
      box-shadow: 3px 3px 3px 3px #d1d1d1;
      text-transform: uppercase;
      letter-spacing: 1px;
    }
    #logout-btn:hover{
      background: plum;
      border:none;
      box-shadow: 3px 3px 3px 3px #b080b0;
      color:white;
    }
    #logout-btn:active{
      outline:none;
      box-shadow: none;
    }
    form{
      width:50%;
      height: 400px;
      margin: 3% auto;
      padding:5%;
    }
    .update-div{
      display: flex;
      flex-flow:column;
      align-items: center;
    }
    .update-div input{
      width:100%;
      height:40px;
      margin:1% 0;
      font-size: 1em;
      padding-left: 1%;
    }
    .update-div textarea{
      width:100%;
      height:300px;
      margin: 1% 0;
      font-size: 1em;
      padding-left: 1%;
      line-height: 1.5;
    }
    .update-div button{
      width:50%;
      margin: 1% 0;
      height:40px;
      font-size: 1em;
      background: white;
      cursor: pointer;
      border:1px solid #d1d1d1;
      box-shadow: 3px 3px 3px 3px #d1d1d1;
      text-transform: uppercase;
      letter-spacing: 1px;
    }
    .update-div button:hover{
      background: plum;
      border:none;
      box-shadow: 3px 3px 3px 3px #b080b0;
      color:white;
    }
    .update-div button:active{
      outline:none;
      box-shadow: none;
    }

    </style>
  </head>

  <body>
    {{> header}}

    <form method="POST" onsubmit="return confirm('Update this entry in the database')">
      <div class="update-div">
        <input type="text" name="title" value="{{mytitle}}" required>

        <textarea name="bodytext" rows="8" cols="80" required>{{mybodytext}}</textarea>

        <button type="submit" name="submit" value="submit">Submit</button>
      </div>
    </form>


    <script>
    const home = document.getElementById("home-btn");
    const create = document.getElementById("create-btn");
    const logout = document.getElementById("logout-btn");
    
    if (home) {
        home.addEventListener("click", function() {
            window.location = "/home";
        });
    }

    if (create) {
        create.addEventListener("click", function() {
            window.location = "/create";
        });
    }

    if (logout) {
        logout.addEventListener("click", function() {
            window.location = "/logout";
        });
    }

    </script>

  </body>
</html>
